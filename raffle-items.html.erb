<!-- Main -->
  <div id="main-wrapper">
    <div class="container">
      <div id="content">

        <h2>Raffle</h2>
        <p>
          Below are some of the exciting items that will be raffled off that this year's event!  Drawing will be on Saturday, October 3, 2015 at 10:15 PM.
          <br/>
          Please keep checking back as we add new items.
        </p>

        <!-- Content -->
          <article>
            <section class="widget thumbnails">
              <div class="grid">
                <% raffle_items = CSV.read("./data/raffle-items.csv") %>
                <% raffle_items.each do |item| %>
                  <% title = item[0] %> 
                  <% image_file = item[1] %> 
                  <% description = item[2] %> 
                  <% value = item[3] %>

                  <div class="row 50%">
                    <div class="3u">
                      <a href="#" class="image fit"><img src="images/raffle-items/<%= image_file %>" alt="<%= "#{title}" %>" /></a>
                    </div>
                    <div class="9u" style="line-height: 130%;">
                      <h3><%= "#{title}" %></h3>
                      <p><%= "Value: #{value}" %></p>
                      <br/>
                      <p><%= description %></p>
                    </div>
                  </div>

                <% end %>
              </div>
            </section>
          </article>

      </div>
    </div>
  </div>