<h2>2015 Big Screen Bash Sponsors</h2>

<div class="row 100%">
  <% ["Platinum", "Gold"].each do |sponsor_type| %>
    <% sponsors = CSV.read("./data/sponsors-#{sponsor_type.downcase}.csv") %>
    <% if sponsors.size > 0 %>

      <div class="6u 12u(medium)">
        <section class="widget thumbnails box">

          <h3><%= sponsor_type %> Sponsors</h3>
          <div class="grid">
            <div class="row 50%">

              <% sponsors.each do |sponsor| %>
                <% image_file = "#{sponsor[0].downcase}.png" %> 
                <% link = sponsor[1] %> 

                <div class="6u">
                  <a href="<%= link %>" class="image fit"><img src="images/sponsors-<%= sponsor_type.downcase %>/<%= image_file %>" alt="" style="-ms-interpolation-mode: nearest-neighbor;border: 1px solid #708090;" /></a>
                </div>
              <% end %>

            </div>
          </div>

        </section>
      </div>

    <% end %>
  <% end %>
</div>

<% ["Silver", "Media", "Table", "Supporting"].each do |sponsor_type| %>
  <% sponsors = CSV.read("./data/sponsors-#{sponsor_type.downcase}.csv") %>
  <% if sponsors.size > 0 %>

    <div class="row 100%">
      <div class="12u 12u(medium)">

        <section class="widget thumbnails box">
          <h3><%= sponsor_type %> Sponsors</h3>
          <div class="grid">
            <div class="row 50%">

              <% sponsors.each do |sponsor| %>
                <% image_file = "#{sponsor[0].downcase}.png" %> 
                <% link = sponsor[1] %> 

                <div class="3u">
                  <a href="<%= link %>" class="image fit"><img src="images/sponsors-<%= sponsor_type.downcase %>/<%= image_file %>" alt="" style="-ms-interpolation-mode: nearest-neighbor;border: 1px solid #708090;" /></a>
                </div>
              <% end %>

            </div>
          </div>
        </section>

      </div>
    </div>
    
  <% end %>
<% end %>